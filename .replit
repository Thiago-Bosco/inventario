[nix]
channel = "stable-24_05"
packages = ["cacert", "fontconfig", "ghostscript", "glib", "harfbuzz", "pango", "pgadmin4"]

[deployment]
run = ["sh", "-c", "python3 manage.py runserver 0.0.0.0:3000"]

[workflows]
